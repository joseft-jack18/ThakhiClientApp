<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <EditText
            android:id="@+id/txtCelularCliente"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_above="@+id/txtCorreoCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/formulario2"
            android:hint="Nro celular"
            android:inputType="phone"
            android:paddingLeft="40dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorBackgroudText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtCorreoCliente"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_above="@+id/txtNuevaClave"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/formulario2"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:paddingLeft="40dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorBackgroudText"
            app:layout_constraintBottom_toTopOf="@+id/txtNuevaClave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCelular">

        </EditText>

        <EditText
            android:id="@+id/txtNuevaClave"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_above="@+id/txtConfimarClave"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/formulario2"
            android:hint="Nueva Clave"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorBackgroudText"
            app:layout_constraintBottom_toTopOf="@+id/txtCelularCliente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo">

        </EditText>

        <Button
            android:id="@+id/btnfoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivfoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="376dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginBottom="7dp"
            android:background="#ffff"
            android:text="Cargar Foto"
            android:textColor="#151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.653"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtConfimarClave"
            app:layout_constraintVertical_bias="0.0">

        </Button>

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_above="@+id/desing"
            android:layout_below="@+id/txtPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/btn_guardar"
            app:layout_constraintBottom_toTopOf="@+id/desing"
            app:layout_constraintCircleRadius="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnfoto"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/desing"
            android:layout_width="420dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ic_elipse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/ivfoto"
            android:layout_width="128dp"
            android:layout_height="125dp"
            android:layout_above="@+id/btnGuardar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="141dp"
            android:layout_marginLeft="141dp"
            android:layout_marginEnd="141dp"
            android:layout_marginRight="141dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnfoto"
            app:layout_constraintVertical_bias="0.818"
            app:srcCompat="@drawable/logo_thakhi" />

        <EditText
            android:id="@+id/txtConfimarClave"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btnGuardar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="219dp"
            android:background="@drawable/formulario2"
            android:hint="Confirmar Clave"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorBackgroudText"
            app:layout_constraintTop_toBottomOf="@+id/txtNuevaClave">

        </EditText>

    </RelativeLayout>

</ScrollView>