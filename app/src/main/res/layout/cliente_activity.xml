<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondoPrincipal">


        <EditText
            android:id="@+id/txtCelularCliente"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/formulario2"
            android:hint="Nro celular"
            android:paddingLeft="40dp"
            android:inputType="phone"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </EditText>

        <EditText
            android:id="@+id/txtCorreoCliente"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/formulario2"
            android:hint="Correo"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCelular">

        </EditText>

        <EditText
            android:id="@+id/txtNuevaClave"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/formulario2"
            android:hint="Nueva Clave"
            android:paddingLeft="40dp"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo">

        </EditText>

        <EditText
            android:id="@+id/txtConfimarClave"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/formulario2"
            android:hint="Confirmar Clave"
            android:paddingLeft="40dp"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNuevaClave">

        </EditText>


        <Button
            android:id="@+id/btnfoto"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="#ffff"
            android:text="Cargar Foto"
            android:textColor="#151"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtConfimarClave">

        </Button>

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_below="@+id/txtPassword"
            android:background="@drawable/btn_guardar"
            app:layout_constraintBottom_toTopOf="@+id/desing"
            app:layout_constraintCircleRadius="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnfoto"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/desing"
            android:layout_width="420dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_elipse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/ivfoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnfoto"
            app:layout_constraintVertical_bias="0.433"
            app:srcCompat="@drawable/logo_thakhi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>